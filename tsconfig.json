{
  "compilerOptions": {
    "module": "system",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "compileOnSave": false,
  "filesGlob": [
    "client/src/**/*.ts",
    "typings/browser.d.ts",
    "node_modules/angular2/typings/main.d.ts"
  ],
  "files": [
    "client/src/doremus/components/app.component.ts",
    "client/src/doremus/components/left-menu.component.ts",
    "client/src/doremus/components/queries-test.component.ts",
    "client/src/doremus/components/top-info.component.ts",
    "client/src/doremus/components/top-nav/top-nav.component.ts",
    "client/src/doremus/services/queries-test.service.ts",
    "client/src/index.ts",
    "typings/browser.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
