{
  "compilerOptions": {
    "module": "system",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "compileOnSave": false,
  "filesGlob": [
    "client/src/**/*.ts",
    "node_modules/angular2/typings/browser.d.ts",
    "node_modules/angular2/typings/main.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
