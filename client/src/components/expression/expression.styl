@import "../../styles/dep/vars"
@import '../../../node_modules/material-shadows/material-shadows'

.forever-scroll
  height: auto;
  overflow: hidden;

.expression-detail
  .overview
    @extend .first-content
    background darken(main, 3)
    color white
    position relative
    overflow hidden
    &:before
      content ''
      background url(/static/img/bg/detail-overview-bg.png) center center no-repeat
      background-size 100em

      position absolute
      top 0
      left 0
      height 100%
      width 100%
      z-index 1

    // final 'triangle' of the overview
    &:after
      content ''
      background grayLight

      position absolute
      left 0
      height 8em
      width 115%
      z-index 1
      transform rotate(-3deg) translateX(-2em) translateY(-4em)
      box-shadow 0 -15px 25px -14px grayDark

    .bg
      position absolute
      top 0
      left 0
      height 100%
      width 100%
      z-index 1
      opacity .4

      background transparent center center no-repeat
      background-size cover

    .overview-cont
      +above('m')
        display flex
        justify-content space-between

      padding 3em 2em
      max-width pageWidthLimit
      margin auto
      position relative
      z-index 2

      .composer
        font 200 1.3em Roboto, sans-serif
        margin 0
        opacity .8

      .title
        color white
        font-weight 400
        margin .1em 0 0

      .other-title
        font-weight 200
        opacity .8
        margin-top .2em

      .work-note
        opacity .9
        font-weight 400
        margin 2em 0 1em
        p
          margin 0

    .title-cont
      flex 60
      padding-right 1em
      margin-bottom 2em

    .info-cont
      flex 30
      position relative
      .source
        text-align right
        opacity .7
        padding 0 1em
        img
          max-width 3em
          max-height 2em
          filter invert() brightness(100)
      .info-card
        margin-top 1em
        background white
        color black
        padding 2em
        min-height 16em
        z-depth(3)

        label
          font-weight 400
          text-transform uppercase
          color main
          font-size .8em
          display block
          margin 0
        span
          margin-right .3em
          display inline-block
        a
          color black
          text-transform capitalize
          text-decoration underline
        > div
          margin-bottom 1em
          display block

  .info
    +above('m')
      display flex
    justify-content space-between
    > section
      flex 60
      +above('m')
        padding-right 2em
    .recommendation-cont
      flex 30
      h3
        margin-bottom 0
        padding .3em
        border-top 1px solid alpha(#333, .3);
        color alpha(#333, .6)
        font-variant small-caps
      .empty-msg
        text-align center
        color alpha(#333, .3)
        margin 1em

.main-text
  width 50%
  font-weight lighter
  flex 2 0 auto
  & > h2
    font-family Roboto, sans-serif
    font-size 1.4em
    font-weight bold
    color main
  & > p
    font-family Roboto, sans-serif
    font-weight normal
    font-size 1em
  & > div > span
    font-size 100%
    font-family Roboto, sans-serif
    font-weight normal
    &:before
      content: ", "
    &:first-of-type:before
      content none
    & > a
      color seaMedium
      font-family Roboto, sans-serif
      font-weight normal
      cursor pointer
      font-size 100%
  label
    margin-right .5em

.instr
  font-size 90%
  margin 0
  padding-left 20px
  cursor default

.card-container
  display inline-block
  vertical-align top
  padding .6em
  height 320px
  > md-card
    width 240px
    height 100%
    margin auto
    overflow hidden
    cursor pointer
    background #fff

.realisations
  h2
    color main
    font-size 1em
    strong
      margin .3em
      font-size 1.6em
