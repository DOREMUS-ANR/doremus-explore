@import "../../styles/dep/vars"

.home
  h1
    display: block;
    color #fff
    text-shadow 1px 1px 2px #333
    margin 2em 1em 0
    padding .3em .5em
    font 3em normal Raleway, sans-serif
    background alpha(#000, .5)
    text-align left

  .cover
    height 45em
    max-height 90vh
    width 100%
    background #000 url('/static/img/bg/violin.jpeg') center center no-repeat
    background-size cover
    position relative
    display flex
    align-items center
    justify-content center
    text-align center
    box-shadow inset 0 -3px 16px 0 #333
    +below('m')
      font-size .8em
    +below('m')
      font-size .5em
    [md-raised-button]
      margin 1em auto
      font-size 1.4em
      background main
      color #fff
      &:hover
        text-decoration none
        z-depth(4)
        background lighten(main, 5)

  .descriptive
    +above('m')
      display flex
      flex-flow row no-wrap
      align-items center
      justify-content center
    text-align center
    padding 2em 0
    > *
      padding 1em 2em
    .img-cont
      flex 0 1 12em
      min-width: 28em
      opacity: .5
      img
        max-width 100%
        max-height 16em
    p
      flex 2 0 20em
      max-width 31em
      font-size 1.3em
      text-align left

  .divider
    width 100%
    height 10em
    background #333 center -3em no-repeat
    background-size cover
    box-shadow inset 0 -3px 16px 0 #333
