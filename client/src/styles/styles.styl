/* global imports */
@import 'fontello';

/* global styles */
h1
  color #369
  font-family 'Lato', sans-serif
  font-size 250%

h2
  color #9e009e
  font-family 'Lato', sans-serif
  font-weight lighter

h3
  color #963
  font-family 'Lato', sans-serif
  font-weight lighter
body
  margin 0
  background-image url("../img/back.jpeg")
  background-size auto
  background-repeat no-repeat

body .fullPage
  display flex
  flex-flow row wrap

body, input[text], button
  color #888
  font-family 'Lato', sans-serif

.header, .footer
  flex 1 100%
  height 60px
  width 100%
  background-color white
  box-shadow 0px 0px 2px rgba(51, 102, 153, 0.5)

.aside
  flex 1 auto

.main
  margin 10px
  flex 1 100%
  display flex
  flex-flow column wrap

.btn-primary
  background-color #e7892b
  border-color #d47c24
  &:hover, &:focus
    background-color #d47c24 !important
    border-color #d47c24 !important
    box-shadow none

