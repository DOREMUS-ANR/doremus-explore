/* global imports */
@import 'fontello';

/* global styles */
h1
  color #369
  font-family 'Lato', sans-serif
  font-size 250%

h2
  color #9e009e
  font-family 'Lato', sans-serif
  font-weight lighter

h3
  color #963
  font-family 'Lato', sans-serif
  font-weight lighter

body
  margin 2em

body, input[text], button
  color #888
  font-family 'Lato', sans-serif

.btn-primary
  background-color #e7892b
  border-color #d47c24
  &:hover, &:focus
    background-color #d47c24 !important
    border-color #d47c24 !important
    box-shadow none

/* component-specific styles */
