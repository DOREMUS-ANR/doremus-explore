/* global imports */
@import 'fontello';

/* global styles */
h1
  color #369
  font-family 'Lato', sans-serif
  font-size 250%

h2
  color #9e009e
  font-family 'Lato', sans-serif
  font-weight lighter

h3
  color #963
  font-family 'Lato', sans-serif
  font-weight lighter


my-app
  margin 0
  background-image url("../img/back.jpeg")
  background-size auto
  background-repeat no-repeat
  height 100vh
  min-height 100vh
  display flex
  flex-flow column wrap
  height 100vh
  min-height 100vh
  color #888
  font-family 'Lato', sans-serif

.header, .footer
  height 60px
  width 100%
  background-color white
  box-shadow 0px 0px 2px rgba(51, 102, 153, 0.5)
  padding 0
  margin 0

.aside
  flex 0

.main
  margin 10px
  flex 1 0 auto
  display flex
  flex-flow row wrap

.btn-primary
  background-color #e7892b
  border-color #d47c24
  &:hover, &:focus
    background-color #d47c24 !important
    border-color #d47c24 !important
    box-shadow none

