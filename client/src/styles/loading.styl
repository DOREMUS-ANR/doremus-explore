@import "vars"

$base-size = 100px
$back-color = main
$circle-color = #f5f5f6

#loading
  position fixed
  top 0
  left 0

  height 100vh
  width 100vw

  background linear-gradient(top, $back-color, darken($back-color, 15))

  +above('m')
    font-size 1.4em

  .loading-cont
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    .circle
      width: $base-size
      height: $base-size
      border-radius: 50%
      background: $circle-color
      animation: scale-normal 1.3s ease-in-out infinite
    .transparent
      opacity: .4
      position: absolute
      top: 0
      left: 0
      animation: scale-reverse 1.3s ease-in-out infinite


  .logo
    display block
    position relative
    z-index 1
    margin 3em 0 1em

    font-size 2.5em
    line-height 1em
    letter-spacing .1em
    text-transform uppercase
    text-align center

    color #fff

    height 1.6em

    font-family Raleway, sans-serif
    &:after
      content "by DOREMUS.org"
      font-variant small-caps
      display block
      text-align center
      font-size .3em
      line-height 1em
      letter-spacing normal

  .disclaimer
    position absolute
    bottom 0
    margin 1em auto 7em
    color #fff
    text-align center
    width 100vw
    opacity 0
    animation appears-later 1.3s ease-in-out 5s forwards



@keyframes scale-normal
  0%
    transform: scale(0.7)
  50%
    transform: scale(0.5)
  100%
    transform: scale(0.7)

@keyframes scale-reverse
  0%
    transform: scale(0.5)
  50%
    transform: scale(0.7)
  100%
    transform: scale(0.5)


@keyframes appears-later
  0%
    opacity 0
  100%
    opacity 1
