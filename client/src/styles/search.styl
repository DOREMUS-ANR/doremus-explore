.searchcontainerhid
	height 0
	overflow hidden

.searchcontainer
	padding 2em 0
	height auto

.searchbox
	background #fff
	padding 2em 2em
	z-depth(1)
	border-radius 0.3em

select {
    width: auto
    padding: 12px 20px;
    margin: 8px 8px;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}
