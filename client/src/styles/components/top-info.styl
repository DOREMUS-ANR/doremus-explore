top-info, work-tab, performance-tab, recording-tab, score-tab, person-tab
  display flex
  flex-flow row wrap
  justify-content center
  width 100%

.top_info
  //background-color rgba(#404040, 0.5)
  height 100%
  width 100%
  display flex
  justify-content space-around
  flex-flow row wrap
  align-items center

.main-img
  flex 1 0 auto
  height 100%
  width 35%
  padding 10px
  .video
    position relative
    width 100%
    height 0
    padding-bottom 56%
  .video iframe
    position absolute
    left 0
    top 0
    width 100%
    height 100%
  .video img
    position absolute
    left 0
    top 0
    width 100%
    height 100%

.main-text
  width 50%
  font-weight lighter
  flex 2 0 auto
  & > h2
    font-family 'Lato', sans-serif
    font-size 1.3em
    font-weight bold
  & > p
    font-family 'Lato', sans-serif
    font-size 1em
  & > h2
    color #e78fe7
  & > h2#title0
    color #298356
  & > h2#title1
    color #9e009e
  & > h2#title2
    color #963
  & > div > span
    font-size 80%
    font-family 'Lato', sans-serif
    & > a
      color rgb(178, 194, 242)
      font-family 'Lato', sans-serif
      cursor pointer
      font-size 90%

.butI
  margin-top 5px
  height 100%
  width 140px

.instr
  font-size 70%
  color rgb(178, 194, 242)
  font-family 'Lato', sans-serif
  margin 0
  padding-left 20px
  cursor pointer

ul>li>a, ul>li>a:hover
  color rgb(178, 194, 242)

@media screen and (max-width: 650px)
  .top_info
    flex-flow row wrap
    & .main-text
      font-size 16px
      width 100%
    & .main-image
      width 100%
    & .main-text > p
      font-size 0
    & .main-text > h2
      margin 0
@media screen and (max-width: 400px)
  .top_info
    & .main-text > h2
      font-size 12px
