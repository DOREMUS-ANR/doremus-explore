top-info
  display flex
  flex-flow row wrap
  justify-content center

.top_info
  background-color rgba(#404040, 0.5)
  height 100%
  width 100%
  display flex
  justify-content space-around
  flex-flow row wrap
  font-size 0
  align-items center

.main-img
  flex-grow 1
  height 100%
  width 35%
  padding 10px
  #video1
    height 100%
    width 100%

.main-text
  width 65%
  font-size 15px
  flex-grow 2
  padding 10px
  height 100%
  & > h2
    font-family 'Lato', sans-serif
    font-size 100%
    font-weight bold
  & > p
    color rgba(#ffffff, 0.95)
    font-family 'Lato', sans-serif
    font-size 80%
  & > h2#title0
    color #298356
  & > h2#title1
    color #9e009e
  & > h2#title2
    color #963

.butI
  margin-top 5px
  height 100%
  width 140px

@media screen and (max-width: 650px)
  .top_info
    flex-flow row wrap
    & .main-text > p
      font-size 0
    & .main-text > h2
      margin 0
@media screen and (max-width: 400px)
  .top_info
    & .main-text > h2
      font-size 12px
