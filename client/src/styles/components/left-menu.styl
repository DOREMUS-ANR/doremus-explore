#left_menu
  ul#navigation
    position fixed
    margin 0px
    padding 0px
    top 70px
    left 0px
    list-style none
    z-index 9999
    li
      width 100px
      cursor pointer
      &:hover
        span
          margin-left 0px
      span
        display block
        margin-left -60px
        width 70px
        height 50px
        background-color #69bbf0
        background-repeat no-repeat
        background-position center center
        box-shadow 0px 0px 2px #336699
        border-radius 0px 10px 10px 0px
        border-bottom-right-radius 10px
        border-top-right-radius 10px
  .menu-icon
    display block
    font-size 30px
    color #7093B7
    text-align center
    padding 8px 0 0px
    background-image none
